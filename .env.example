# Example: .env file for DeepSeek-R1 Integration
# Copy this file to .env in project root and configure your settings

# ==========================================
# DeepSeek LLM Configuration
# ==========================================

# Enable DeepSeek reasoning (set to "true" to activate)
DEEPSEEK_ENABLED=false

# LLM Microservice URL (change to your VPS IP)
DEEPSEEK_API_URL=http://localhost:8000/infer

# Request timeout in seconds
DEEPSEEK_TIMEOUT=30

# Maximum retry attempts for failed requests
DEEPSEEK_MAX_RETRIES=3

# ==========================================
# Example Configurations
# ==========================================

# Local development (microservice on localhost):
# DEEPSEEK_ENABLED=true
# DEEPSEEK_API_URL=http://localhost:8000/infer

# Production (microservice on VPS):
# DEEPSEEK_ENABLED=true
# DEEPSEEK_API_URL=http://your-vps-ip:8000/infer
# DEEPSEEK_TIMEOUT=60

# Disabled (use CLIP-only analysis):
# DEEPSEEK_ENABLED=false
